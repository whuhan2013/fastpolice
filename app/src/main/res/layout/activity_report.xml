<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.yyydjk.gank.theme.ColorView
        android:id="@+id/card_status_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="?attr/colorPrimary" />

    <com.yyydjk.gank.theme.ColorRelativeLayout
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_test"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/report_icon"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/report_title"
                android:paddingTop="6dp"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/report_icon"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:text="定位"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </com.yyydjk.gank.theme.ColorRelativeLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bd_mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:clickable="true" />

